<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/color_ultre_light_tone"
    app:cardElevation="@dimen/middle_margin"
    android:layout_marginVertical="@dimen/middle_margin"
    app:cardCornerRadius="@dimen/common_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/min_marghin"
        android:layout_marginVertical="@dimen/min_marghin"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgIconCard"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginStart="@dimen/min_marghin"
            android:contentDescription="@string/img_descript"
            android:src="@drawable/apocalypto"
            app:shapeAppearanceOverlay="@style/ImageView.Corner"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/min_marghin"
            android:layout_marginHorizontal="@dimen/middle_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="@dimen/middle_margin">

                <TextView
                    android:id="@+id/tvTitleMov"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="@color/default_grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="@string/txt_title_movie"/>

                <TextView
                    android:id="@+id/tvCredsIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    app:drawableTint="@color/color_secondary"
                    app:drawableStartCompat="@drawable/ic_arrow_drop_down"
                    android:paddingHorizontal="@dimen/min_marghin"
                    android:textColor="@color/color_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:text="@string/txt_credits_in"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary"
                        android:layout_marginEnd="@dimen/middle_margin"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/txt_amont_pay_mov" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_primary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/txt_mexican_pesos" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvCredsOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="end"
                    app:drawableTint="@color/color_primary"
                    app:drawableStartCompat="@drawable/ic_arrow_drop_up"
                    android:paddingHorizontal="@dimen/min_marghin"
                    android:textColor="@color/color_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="@string/txt_credits_in" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>