<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavLayouts01" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_main_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_light_tone</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:navigationBarColor">@color/color_secondary</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="ButtonTheme" parent="Widget.Material3.Button.TextButton">
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="cornerRadius">@dimen/btn_corner_radius</item>
    </style>
</resources>